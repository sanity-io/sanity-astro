{
  "extends": "astro/tsconfigs/base",
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["./*.astro", "./**/*.ts"],
  "exclude": ["node_modules/*", "./vite*.ts", "dist"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "preserve"
  }
}
